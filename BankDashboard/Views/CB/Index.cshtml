
@{
    ViewBag.Title = "Bot Statistics";
    Layout = "~/Views/Shared/_CBLayout.cshtml";
}
<script src="~/JavaScript/mdb/mdb.min.js"></script>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<style>
    .durationTable {
        width: 66%;
        font-weight: bold;
        color: #716662;
        position: relative;
        left: 20%;
    }

    .chartTable {
        width: 100%;
        font-weight: bold;
        color: #716662;
        position: relative;
        left: 7%;
        margin-top: -2px;
    }

    .card-header b {
        color: #546f6f;
        margin-left: -4px;
    }

    #labeldiv {
        font-size: 19px;
        background-color: #5e6f6b;
        border-radius: 3px;
        padding: 3px;
        font-family: fangsong;
        font-weight: bold;
        position: relative;
        top: 3px;
    }

    .progress {
        width: 0px;
        height: 27px;
        transition-property: width;
        transition-duration: 1s;
        border-color: #c5acb1;
        border: solid;
        border-width: 1px;
        border-radius: 0px;
    }

        .progress b {
            padding-left: 50%;
            padding-right: 50%;
            padding-top: 10px;
            color: white;
        }

    .pbar1 {
        background-color: #34d234;
        border-right: none;
    }

    .pbar2 {
        background-color: #0e35c1;
        border-right: none;
        border-left: none;
    }

    .pbar3 {
        background-color: red;
        border-left: none;
    }

    .pbar4 {
        background-color: #5e5858;
        border-left: none;
    }

    .pabrraised1 {
        width: 50%;
    }

    .pabrraised2 {
        width: 35%;
    }

    .pabrraised3 {
        width: 10%;
    }

    .invoice {
        width: 80%;
        height: calc(1.5em + 0.75rem + -10px);
        background-color: #f9f3f0;
        color: #8c9894;
        font-weight: bold;
    }

    .pabrraised4 {
        width: 5%;
    }
</style>
<div class="card-header">
    <div class="row">
        <table class="durationTable">
            <tr>
                <td style="text-align: center;"><b>Duration :</b></td>
                <td><input type="radio" value="Realtime" name="Duration" /> Realtime</td>
                <td><input type="radio" value="1 Month" name="Duration" /> 1 Month</td>
                <td><input type="radio" value="3 Months" name="Duration" /> 3 Months</td>
                <td><input type="radio" value="3 Months" name="Duration" /> Custom</td>
            </tr>
        </table>

    </div>
    <div class="row">

    </div>
</div>

<div class="card-body">
    <div class="row">
        @*<table style="position: relative;left: 1.5%;">
                <tr>
                    <td><input type="text" placeholder="From Date" class="form-control invoice" /></td>
                    <td><input type="text" placeholder="To Date" class="form-control invoice" /></td>
                </tr>
            </table>*@
    </div>
    <div class="row">
