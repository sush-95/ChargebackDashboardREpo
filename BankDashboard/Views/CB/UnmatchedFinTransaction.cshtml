
@{
    ViewBag.Title = "Unmatched Financial Transaction";
    Layout = "~/Views/Shared/_CBLayout.cshtml";
}

<style>
    .form-control {
        height: calc(1.5em + -0.4rem + 10px);
    }

    #inputheader .form-control {
        font-size: 12px;
    }

    #example {
        text-align: center
    }

    .col-sm-2 span {
        font-weight: bold;
        font-size: 13px;
        color: #61605d;
    }

    #inputheader {
        font-size: 10px;
        text-align: center;
    }

        #inputheader th {
            width: 14.28%;
        }

    .col-sm-3 .invoice {
        height: 27px;
        width: 164px;
    }

    .btnImg {
        height: 13px
    }
</style>
<div class="card-header">
    <div class="row">
        <div class="col-sm-2">
            <h4 style="color:#758484"></h4>
        </div>
        <div class="col-sm-8"></div>
        <div class="col-sm-2">
            <form action="@System.Web.Configuration.WebConfigurationManager.AppSettings["applicationname"].ToString().Trim()/CB" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" value="" name="hfilter" />
                <button class="btn btn-success" type="submit">
                    <img src="~/Images/exl.png" style="height: 19px;" />Export
                </button>
            </form>
        </div>
    </div>
</div>
<div class="card-body">
    <form action="@System.Web.Configuration.WebConfigurationManager.AppSettings["applicationname"].ToString().Trim()/CB/UnmatchedFinTransaction" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-2">
                <span> From Date:</span>
                <input type="text" class="form-control invoice" autocomplete="off" name="FromDate" />
            </div>
            <div class="col-sm-2">
                <span> To Date:</span>
                <input type="text" class="form-control invoice" autocomplete="off" name="ToDate" />
            </div>

            <div class="col-sm-3">
                <button class="btn btn-sm btn-success" type="submit" style="margin-top: 19px;background-color: #2193b5;">Find</button>
                <a class="btn btn-sm btn-secondary" href="/app/CB/MatchedFinTransaction" style="margin-top: 19px;">Reset</a>
            </div>
        </div>
    </form>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table id="example" class="table-bordered table table-striped table-condensed">
                <thead style="background-color:#1d40b1;color:white;text-align: center;">
                    <tr>
                        <th>Sl No</th>
                        <th>Member Case</th>
                        <th>Status</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.list != null)
                    {
                        foreach (var item in ViewBag.list)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.MemberCase</td>
                                <td>@item.Status</td>                               
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
