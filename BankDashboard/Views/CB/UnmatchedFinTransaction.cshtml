@using BankDashboard.Common;
@{
    ViewBag.Title = "Unmatched Financial Transaction";
    Layout = "~/Views/Shared/_CBLayout.cshtml";
    ViewModelClass.FilterClass filterobj = (ViewModelClass.FilterClass)ViewBag.filter;
}

<style>
    .form-control {
        height: calc(1.5em + -0.4rem + 10px);
    }

    #inputheader .form-control {
        font-size: 12px;
    }

    #example {
        text-align: center
    }

    .col-sm-2 span {
        font-weight: bold;
        font-size: 13px;
        color: #61605d;
    }

    #inputheader {
        font-size: 10px;
        text-align: center;
    }

        #inputheader th {
            width: 14.28%;
        }

    .col-sm-3 .invoice {
        height: 27px;
        width: 164px;
    }

    .btnImg {
        height: 13px
    }
</style>
<div class="card-header" style="text-align:center">
    <span class="pagetilte">Unmatched Financial Transaction</span>
</div>
<div class="card-body">
    <form action="@System.Web.Configuration.WebConfigurationManager.AppSettings["applicationname"].ToString().Trim()/CB/UnmatchedFinTransaction" method="post">   
        <div class="row">
            <div class="col-sm-2">
                <span> From Date:</span>
                @if (filterobj == null)
                {
                    <input type="text" class="form-control invoice" autocomplete="off" name="Fromdate" />
                }
                else
                {
                    <input type="text" class="form-control invoice" value="@filterobj.Fromdate" autocomplete="off" name="Fromdate" />
                }
            </div>
            <div class="col-sm-2">
                <span> To Date:</span>
                @if (filterobj == null)
                {
                    <input type="text" class="form-control invoice" autocomplete="off" name="Todate" />
                }
                else
                {
                    <input type="text" class="form-control invoice" value="@filterobj.Todate" autocomplete="off" name="Todate" />
                }
            </div>

            <div class="col-sm-3">
                <button class="btn btn-sm btn-success" type="submit" style="margin-top: 19px;background-color: #2193b5;" name="find" value="find">Find</button>
                <a class="btn btn-sm btn-secondary" href="/app/CB/UnmatchedFinTransaction" style="margin-top: 19px;">Reset</a>
                <button class="btn btn-sm btn-success" style="margin-top: 19px;" name="excel" value="excel" type="submit">
                    <img src="~/Images/exl.png" style="height: 19px;" />Export
                </button>
            </div>
        </div>
    </form>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table id="example" class="table-bordered table table-striped table-condensed">
                <thead style="color:white;text-align: center;">
                    <tr>
                        <th>Sl No</th>
                        <th>Member Case</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.list != null)
                    {
                        foreach (var item in ViewBag.list)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.MemberCase</td>
                                <td>@item.Status</td>
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
