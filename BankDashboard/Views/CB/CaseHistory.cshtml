@using BankDashboard.Common;
@{
    ViewBag.Title = "Case History/Detail";
    Layout = "~/Views/Shared/_CBLayout.cshtml";
    ViewModelClass.FilterClass filterobj = (ViewModelClass.FilterClass)ViewBag.filter;
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<style>
    .form-control {
        height: calc(1.5em + -0.4rem + 10px);
    }

    #inputheader .form-control {
        font-size: 12px;
    }

    #example {
        text-align: center
    }

    .col-sm-2 span {
        font-weight: bold;
        font-size: 13px;
        color: #61605d;
    }

    #inputheader {
        font-size: 10px;
        text-align: center;
    }

        #inputheader th {
            width: 14.28%;
        }

    .col-sm-3 .invoice {
        height: 27px;
        width: 164px;
    }

    .btnImg {
        height: 13px;
        margin-bottom: 12px;
        margin-left: -3px;
    }

    #example .tbn-sm {
        height: 29px;
        width: 29px;
    }

    #example th {
        background-image: none;
    }
</style>
<div class="card-header" style="text-align:center">
    <span class="pagetilte">Case History</span>
</div>


<div class="card-body">
    <form action="@System.Web.Configuration.WebConfigurationManager.AppSettings["applicationname"].ToString().Trim()/CB/CaseHistory" method="post" id="form1">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-2">
                <span> From Date:</span>
                @if (filterobj == null)
                {
                    <input type="text" class="form-control invoice" autocomplete="off" name="Fromdate" />
                }
                else
                {
                    <input type="text" class="form-control invoice" value="@filterobj.Fromdate" autocomplete="off" name="Fromdate" />
                }

            </div>
            <div class="col-sm-2">
                <span> To Date:</span>
                @if (filterobj == null)
                {
                    <input type="text" class="form-control invoice" autocomplete="off" name="Todate" />
                }
                else
                {
                    <input type="text" class="form-control invoice" value="@filterobj.Todate" autocomplete="off" name="Todate" />
                }
            </div>
            <div class="col-sm-2">
                <span> Feedback Id:</span>
                @if (filterobj == null)
                {
                    <input type="text" class="form-control" autocomplete="off" name="FeedbackID" />
                }
                else
                {
                    <input type="text" class="form-control" value="@filterobj.FeedbackID" autocomplete="off" name="FeedbackID" />
                }
            </div>
            <div class="col-sm-2">
                <span> CIF No:</span>
                @if (filterobj == null)
                {
                    <input type="text" class="form-control" autocomplete="off" name="CIFNo" />
                }
                else
                {
                    <input type="text" class="form-control" value="@filterobj.CIFNo" autocomplete="off" name="CIFNo" />
                }
            </div>
            <div class="col-sm-3">
                <button class="btn btn-sm btn-success" type="submit" style="margin-top: 19px;background-color: #2193b5;" name="find" value="find">Find</button>
                <a class="btn btn-sm btn-secondary" href="/app/CB/CaseHistory" style="margin-top: 19px;">Reset</a>
                <button class="btn btn-sm btn-success" style="margin-top: 19px;" type="submit"  name="export" value="export">
                    <img src="~/Images/exl.png" style="height: 19px;" />Export
                </button>
                @if (TempData["fobj"] != null)
                {
                    <button class="btn btn-sm btn-danger" type="submit" style="margin-top: 19px;" onclick="GetBackToMainPage()" name="getval" value="3">Back</button>
                }


            </div>
        </div>
    </form>
    <br />   
    <!-- Modal -->
    <div class="modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="width: 159%;margin-left: -217px;">
                <div class="modal-header" style="font-weight: bold;color: #7b6b56;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" id="imgContainer">
                            @*<div class="carousel-item active">
                                    <img class="d-block w-100" src="~/Images/building.jpg" alt="First slide">
                                </div>*@

                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- ModalEnd -->
    
    <div class="row">
        <form action="@System.Web.Configuration.WebConfigurationManager.AppSettings["applicationname"].ToString().Trim()/CB/CaseHistoryDetail" method="post" style="width: 100%;">
            @Html.AntiForgeryToken()
            <div class="col-md-12">
                <input type="hidden" name="hfilter" value="@Json.Encode(filterobj)" />
                <table id="example" class="table-bordered table table-striped table-condensed" style="font-size: 12px;">
                    <thead style="color:white;text-align: center;">
                        <tr>
                            <th>Feedback Id</th>
                            <th width="125px">Issue Type</th>
                            <th>Category</th>
                            <th>CIF No</th>
                            <th>Banking With</th>
                            <th>Incident Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Remarks</th>
                            <th>Detail</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.list != null)
                        {
                            string date = "";
                            foreach (var item in ViewBag.list)
                            {
                                date = item.IncidentDate != null ? Convert.ToDateTime(item.IncidentDate).ToString("MM/dd/yyyy") : "--";
                                <tr>
                                    <td>@item.FeedbackId</td>
                                    <td>@item.Issue</td>
                                    <td>@item.Category</td>
                                    <td>@item.CIFNo</td>
                                    <td>@item.BankingWith</td>
                                    <td>@date</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Status</td>
                                    <td>@item.BotRemarks</td>
                                    <td>
                                        <button class="btn tbn-sm btn-success" type="submit" name="feedbackid" value="@item.FeedbackId" style="background-color: #5bc142;border-color: #a8d6a8;">
                                            <img class="btnImg" src="~/Images/detail.png" />
                                        </button>
                                    </td>
                                    <td>
                                        <a href="#" class="btn tbn-sm btn-info" data-toggle="modal" data-target="#myModal1" onclick="getImages('@CBHelper.getImagesOnfeedbackId(item.FeedbackId.ToString())')" data-placement="bottom" title="View">
                                            <img class="btnImg" src="~/Images/view.png" />
                                        </a>
                                    </td>
                                </tr>

                            }
                        }

                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>

<script>
    function getAuthcode(feedbackid) {
        $.ajax({
            type: "POST",
            url: '/app/CB/AuthCode',
            data: '{feedback: ' + feedbackid + '}',
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                // alert("Data has been added successfully.");
                LoadData(data);
            },
            error: function () {
                alert("Error while inserting data");
            }
        });
        $("#flabel").text(feedbackid)

    }
